@model RegisterModel

<title>Registration form</title>
<div class="row">
    <div class="col-md-4"></div>
        <form asp-action="Register" asp-controller="My" class="col-md-4 registration-form" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <h2>Registration</h2>
            <div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter your name">
                    <span asp-validation-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                    <span asp-validation-for="Email" />
                    <small id="emailHelp" class="form-text text-muted">Your email will be seen by other users.</small>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password" />
                </div>
                <input type="submit" class="btn btn-primary registration-button" value="Sign Up" />
            </div>
        </form>
    </div>

